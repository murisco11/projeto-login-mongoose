<%- include('includes/head') %>
  <%- include('includes/messages') %>
    <div class="forms">
      <form action="/login-cadastro/cadastro" method="POST">
        <h1>Cadastro</h1>
        <input type="hidden" name="_csrf" value=<%=csrfToken %>>

        <label for="">E-mail</label>
        <input type="email" placeholder="Insira o seu e-mail" name="email">

        <label for="">Senha</label>
        <input type="password" placeholder="Insira a sua senha" name="password">

        <label for="">Repetir senha</label>
        <input type="password" placeholder="Repita a sua senha" name="password_repeated">

        <button type="submit">Cadastar</button>
      </form>

      <form action="/login-cadastro/login" method="POST">
        <h1>Login</h1>
        <input type="hidden" name="_csrf" value=<%=csrfToken %>>

        <label for="">E-mail</label>
        <input type="email" placeholder="Insira o seu e-mail" name="email">

        <label for="">Senha</label>
        <input type="password" placeholder="Insira a sua senha" name="password">

        <button type="submit">Logar</button>
      </form>
      <form method="GET" action="/trocar_senha">
        <button type="submit">Troca a senha</button>
      </form>
    </div>
    <%- include('includes/footer') %>